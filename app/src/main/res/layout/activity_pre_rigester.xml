<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7986CB"
    android:orientation="vertical"
    tools:context="com.example.admin.collegenoti.activities.PreRigesterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_lecturers"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="LECTURERS"
            android:textAlignment="center"
            android:textColor="#1976D2"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txt_principal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="PRINCIPAL"
            android:textAlignment="center"
            android:textColor="#1976D2"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txt_admin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="ADMIN"
            android:textAlignment="center"
            android:textColor="#1976D2"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/txt_students"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="STUDENTS"
            android:textAlignment="center"
            android:textColor="#1976D2"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txt_parents"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="PARENTS"
            android:textAlignment="center"
            android:textColor="#1976D2"
            android:textSize="28sp" />

    </LinearLayout>


</LinearLayout>
