<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7986CB"
    android:orientation="vertical"
    tools:context="com.example.admin.collegenoti.activities.ParentsActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Select Sem"
                    android:textAlignment="gravity"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/sp_semister"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Select Sem"
                    android:textAlignment="gravity"
                    android:textSize="15sp" />


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Enter URN of child"
                    android:textAlignment="gravity"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edt_urn"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:hint="Enter URN"
                    android:padding="5dp"
                    android:textAlignment="gravity"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:textSize="15sp" />


            </LinearLayout>


            <Button
                android:onClick="onSearch"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="SEARCH  "
                android:textColor="#fff"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="IA Marks"
                android:textColor="#ff6400"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_ia_marks"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#F0F0F0"
                android:src="@android:drawable/ic_menu_camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Attendence"
                android:textColor="#ff6400"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_attendence"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#F0F0F0"
                android:src="@android:drawable/ic_menu_camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Time Table"
                android:textColor="#ff6400"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_time_table"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#F0F0F0"
                android:src="@android:drawable/ic_menu_camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Shortage of Attendence"
                android:textColor="#ff6400"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_attendence_shortage"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#F0F0F0"
                android:src="@android:drawable/ic_menu_camera" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Fee"
                android:textColor="#ff6400"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_fee"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#F0F0F0"
                android:src="@android:drawable/ic_menu_camera" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#ff6400"
                android:onClick="onLogout"
                android:text="Logout"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>



